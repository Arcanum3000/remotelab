
@{
    ViewBag.Title = "RolesCheck";
}

<h2>Roles Check</h2>
<p>Use this form to check the Remote Lab application roles for a given user.</p>
<form method="post" role="form" id="rezform" action="@Url.Action("RolesCheck")">
    <div class="form-horizontal">

        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="UserName" class="control-label col-md-3">@RemoteLab.Properties.Settings.Default.LoginFormUsernameLabel :</label>
            <div class="col-md-9">
                <input type="text" name="UserName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" value="Check Roles" class="btn btn-default"><i class="fa fa-group"></i> Check Roles</button>
            </div>
        </div>
    </div>
</form>