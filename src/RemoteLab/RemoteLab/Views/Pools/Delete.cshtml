@model RemoteLab.Models.Pool

@{
    ViewBag.Title = "Delete";
}

<h2><i class="fa fa-trash-o"></i> Delete Pool: @Model.PoolName</h2>
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-warning"></i> Are you sure you want to delete this pool?</h3>
    </div>
    <div class="panel-body">
        <p>This action cannot be undone and will remote all computers in the pool along with it.</p>
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.PoolName, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.PoolName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ActiveDirectoryUserGroup, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.ActiveDirectoryUserGroup, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.Logo, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ActiveDirectoryAdminGroup, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.ActiveDirectoryAdminGroup, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EmailNotifyList, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.EmailNotifyList, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RdpTcpPort, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.RdpTcpPort, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CleanupInMinutes, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.CleanupInMinutes, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <button type="submit" value="Delete" class="btn btn-default"><i class="fa fa-trash-o"></i> Delete This Pool</button>
                        <a href="@Url.Action("Index")" class="btn btn-link"><i class="fa fa-arrow-circle-left"></i> Go Back To Pools</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>