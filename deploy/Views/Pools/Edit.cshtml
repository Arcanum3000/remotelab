@section Scripts {
<script type="text/javascript">
    // Codee for show/hide password toggle
    $(document).ready(function () {
        $('#passwordinputtoggle').click(function () {
            var pwd = $('#passwordinput');
            var btn = $('#passwordinputtoggle');
            if (pwd.attr('type') == 'password') {
                pwd.attr('type', 'text');
                btn.html('Hide');

            } else {
                pwd.attr('type', 'password');
                btn.html('Show');
            }
        });
    });
</script>
            
